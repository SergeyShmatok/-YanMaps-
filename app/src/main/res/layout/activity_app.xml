<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BaseFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Material3.Light.NoActionBar"
    tools:context=".MainActivity"
    android:animateLayoutChanges="true"
    >

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/plus"
        app:icon="@drawable/plus_button_24"
        app:iconSize="30dp"
        app:iconTint="@color/stormy_sky" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/minus"
        app:icon="@drawable/minus_button_24"
        app:iconSize="30dp"
        app:iconTint="@color/stormy_sky" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_points_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:backgroundTint="@color/night_sky"
        android:contentDescription="@string/Точка"
        android:foreground="@drawable/icon_map_1"
        app:fabSize="normal" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/list_box"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="519dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/asia"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:contentDescription="@string/list_for_item_placemarks"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/field_for_placemarks"
            android:background="@color/champagne"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>
